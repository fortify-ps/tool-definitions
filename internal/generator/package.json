{
  "name": "fortify-tool-definitions-generator",
  "version": "1.0.0",
  "description": "GitHub Action for generating Fortify tool definitions",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/generator.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fortify/tool-definitions.git"
  },
  "keywords": [
    "Fortify",
    "FoD",
    "security"
  ],
  "author": "Ruud Senden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fortify/tool-definitions/issues"
  },
  "homepage": "https://github.com/fortify/tool-definitions#README.md",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vercel/ncc": "0.38.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "typescript": "5.3.3"
  }
}
